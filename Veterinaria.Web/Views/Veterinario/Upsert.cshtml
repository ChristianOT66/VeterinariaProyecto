@model VeterinarioViewModel

@{
    string header = "Create";
    if (Model.Veterinario.IdVeterinario > 0)
    {
        header = "Editar";
    }

    ViewData["Title"] = string.Join(header, " Veterinario");
}

<div style="max-width: 1200px; margin: 20px auto; padding: 5px;">
    <div class="container-fluid">
        <div class="text-center">
            <h1>@header Veterinario</h1>
        </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <fieldset>
                <legend>Información del Veterinario</legend>
                <input type="hidden" asp-for="Veterinario.IdVeterinario" />

                <div class="form-row">
                    <div class="form-group col-lg-6 col-sm-12">
                        <label asp-for="Veterinario.Nombre"></label>
                        <input type="text" asp-for="Veterinario.Nombre"
                               class="form-control" placeholder="Nombre del Veterinario" aria-describedby="NameHelp" />
                        <small id="NameHelp" class="form-text text-muted">Nombre del Veterinario</small>
                        <span asp-validation-for="Veterinario.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6 col-sm-12">
                        <label asp-for="Veterinario.Apellido"></label>
                        <input type="text" asp-for="Veterinario.Apellido"
                               class="form-control" placeholder="Apellidos" aria-describedby="SurnameHelp" />
                        <small id="SurnameHelp" class="form-text text-muted">Apellidos</small>
                        <span asp-validation-for="Veterinario.Apellido" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-lg-6 col-sm-12">
                        <label asp-for="Veterinario.Cedula"></label>
                        <input type="text" asp-for="Veterinario.Cedula"
                               class="form-control" placeholder="Cedula" aria-describedby="CedulaHelp" />
                        <small id="CedulaHelp" class="form-text text-muted">Cedula</small>
                        <span asp-validation-for="Veterinario.Cedula" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-12">
                        <label asp-for="Veterinario.Correo"></label>
                        <div class="input-group">
                            <span class="input-group-text" id="EmailLabel">@@</span>
                            <input type="text" asp-for="Veterinario.Correo"
                                   class="form-control" placeholder="Correo electrónico"
                                   aria-label="EmailLabel" aria-describedby="EmailHelp" />
                        </div>
                        <small id="EmailHelp" class="form-text text-muted">Correo electrónico</small>
                        <span asp-validation-for="Veterinario.Correo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fa-solid fa-floppy-disk"></i> Guardar
                        </button>
                        <button type="button" class="btn btn-outline-danger"
                                onclick="return Cancel();">
                            <i class="fa-solid fa-circle-chevron-left"></i> Cancelar
                        </button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<script>
    function Cancel() {
        swal
            (
                {
                    title: "Veterinario Information",
                    text: "Are you sure to cancel?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }
            ).then
            (
                (cancel) => {
                    if (cancel) {
                        location.href = '/Veterinario';
                    }
                }
            );
    }
</script>

@section Scripts
    {
        <partial name="_ValidationScriptsPartial" />
}